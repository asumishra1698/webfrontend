{
  "compilerOptions": {
    "target": "esnext", // Use "esnext" for modern React projects
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node", // Add this for better module compatibility
    "module": "esnext" // Add this for modern module support
  },
  "include": ["src"]
}